{
  "compilerOptions": {
    "lib": ["esnext"]
  },
  "lint": {
    "rules": {
      "include": ["recommended"]
    }
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true
  },
  "tasks": {
    "test": "deno test --allow-read=../tests --allow-write --allow-env deno_test/",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check mod.mjs src/**/*.mjs"
  }
}
